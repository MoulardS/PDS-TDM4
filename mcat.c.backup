#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <assert.h>


void  mcat(char *path){

    int nbline;
    int buffer_size;
    char *buffer;
    int fd;

    buffer_size=atoi(getenv("MCAT_BUFSIZ"));
    buffer = malloc(buffer_size);
    buffer = getenv("MCAT_BUFSIZ");
    fd = open(path,O_RDONLY);
    assert(fd>0);

    while ((nbline = read(fd,buffer,buffer_size))>0){

        if ((write( STDOUT_FILENO,buffer,nbline))<0){

            perror("ERROR : write");
            exit(EXIT_FAILURE);

        }

    }    

    close(fd);
    free(buffer);

}

int main(int argc,char *argv[]){

    mcat(argv[1]);
    
    return EXIT_SUCCESS;

}
